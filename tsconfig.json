{
  "compileOnSave": true,
  "compilerOptions": {
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "lib": ["esnext"],
    // Uncomment types to check global modules
    // "types": [],
    "module": "commonjs",
    "noUnusedParameters": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUnusedLocals": true,
    "removeComments": false,
    "esModuleInterop": true,
    "target": "ES2020",
    "strictNullChecks": true,
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "exactOptionalPropertyTypes": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "coverage",
    "src/__tests__/**/*.test.ts"
  ]
}